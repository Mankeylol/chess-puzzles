generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model UserScore {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  username    String
  fid         String @unique
  score       Int    @default(0)
  highScore   Int    @default(0)
  gamesPlayed Int    @default(0)
}
